# ─── Server ───────────────────────────────────────────────────────────────
PORT=3000

# ─── Auth ─────────────────────────────────────────────────────────────────
# Generate a strong random string: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=change_this_to_a_long_random_secret_string_at_least_64_chars

# Token expiry (e.g. 8h, 24h, 7d)
JWT_EXPIRES_IN=8h

# ─── CORS ─────────────────────────────────────────────────────────────────
# Set to your frontend domain in production, e.g. https://your-app.onrender.com
# Leave blank to allow all origins (fine if frontend is served by this server)
CORS_ORIGIN=

# ─── Database ─────────────────────────────────────────────────────────────
# Path to SQLite file (auto-created on first run)
DB_PATH=./data/mrb.sqlite

# ─── Admin Seed ───────────────────────────────────────────────────────────
# These are used ONLY on first run to create the initial admin account
ADMIN_NAME=Admin
ADMIN_EMAIL=admin@company.com
ADMIN_PASSWORD=admin@123
